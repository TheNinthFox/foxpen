{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}FoxPen{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/reset.css') }}">
        <link rel="stylesheet" href="{{ asset('build/global.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
        {% block header %}
            <div class="wrapper">
                <div id="logo"><h1>FoxPen</h1></div>
                <nav>
                    <ul>
                        <li class="{% if app.request.attributes.get('_route') == 'front' %}active{% endif %}"><a href="{{ path('front') }}">Home</a></li>
                        <li class="{% if app.request.attributes.get('_route') == 'blog' %}active{% endif %}"><a href="{{ path('blog') }}">Blog</a></li>
                        <li class="{% if app.request.attributes.get('_route') == 'work' %}active{% endif %}"><a href="{{ path('work') }}">Work</a></li>
                        <li class="{% if app.request.attributes.get('_route') == 'about' %}active{% endif %}"><a href="{{ path('about') }}">About</a></li>
                    </ul>
                </nav>
            </div>
        {% endblock %}
    </header>
    <div id="content">
        {% block body %}{% endblock %}
    </div>
    <div id="footer">
        {% block footer %}{% endblock %}
    </div>
    {% block javascripts %}
        <script src="{{ asset('build/app.js') }}"></script>
    {% endblock %}
</body>
</html>